<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/native_ad_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="250dp"
        android:background="@android:color/transparent">

        <ProgressBar
            android:id="@+id/progress_bar_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- AdMob Native Ad -->
        <com.partharoypc.adglide.util.TemplateView
            android:id="@+id/admob_native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
             <ImageView
                android:id="@+id/media_view"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

        <!-- Google Ad Manager Native Ad -->
        <com.partharoypc.adglide.util.AdManagerTemplateView
            android:id="@+id/google_ad_manager_native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

         <LinearLayout
            android:id="@+id/ad_manager_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
             <ImageView
                android:id="@+id/ad_manager_media_view"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>


        <!-- FAN Native Ad -->
        <com.facebook.ads.NativeAdLayout
            android:id="@+id/fan_native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- StartApp Native Ad -->
        <LinearLayout
            android:id="@+id/startapp_native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            
            <LinearLayout
                 android:id="@+id/startapp_native_background"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                <ImageView
                    android:id="@+id/startapp_native_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                     <ImageView
                        android:id="@+id/startapp_native_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical"
                         android:paddingStart="10dp">
                         <TextView
                            android:id="@+id/startapp_native_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"/>
                         <TextView
                            android:id="@+id/startapp_native_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                     </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/startapp_native_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Install"/>
             </LinearLayout>
        </LinearLayout>

        <!-- AppLovin Native Ad -->
        <FrameLayout
            android:id="@+id/applovin_native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
