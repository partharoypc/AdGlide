<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/adglide_bg_native_ad"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="@dimen/adglide_spacing_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/adglide_spacing_small"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <include layout="@layout/adglide_view_native_ad_label" />

                <TextView
                    android:id="@+id/advertiser_textView"
                    style="@style/AdGlide.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/adglide_spacing_tiny"
                    android:gravity="start"
                    android:text="@string/adglide_txt_advertiser" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/adglide_native_icon_size"
                    android:layout_height="@dimen/adglide_native_icon_size"
                    app:cardCornerRadius="@dimen/adglide_corner_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/adglide_img_content_description"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/adglide_spacing_medium"
                    android:layout_marginEnd="@dimen/adglide_spacing_small"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/primary"
                        style="@style/AdGlide.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <RatingBar
                            android:id="@+id/rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adglide_spacing_tiny"
                            android:numStars="5"
                            android:rating="4.5" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/body"
                        style="@style/AdGlide.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/adglide_spacing_tiny"
                        android:text="" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cta"
                    style="@style/AdGlide.ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/adglide_cta_button_height"
                    android:minWidth="@dimen/adglide_cta_button_min_width"
                    android:paddingStart="@dimen/adglide_spacing_medium"
                    android:paddingEnd="@dimen/adglide_spacing_medium"
                    android:background="@drawable/adglide_ad_button" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ad_options_view"
                android:layout_width="@dimen/adglide_ad_options_size"
                android:layout_height="@dimen/adglide_ad_options_size"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/adglide_spacing_tiny"
                android:orientation="vertical"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/adglide_radio_padding_medium"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H,2:1.2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardCornerRadius="@dimen/adglide_corner_radius"
                        card_view:cardElevation="0dp">

                        <com.google.android.gms.ads.nativead.MediaView
                            android:id="@+id/media_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.gms.ads.nativead.NativeAdView>

