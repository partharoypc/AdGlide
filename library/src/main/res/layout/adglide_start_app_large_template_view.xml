<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/start_app_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/start_app_native_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/adglide_video_padding_medium">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/view_sponsored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/adglide_video_padding_medium"
                    android:layout_toStartOf="@+id/ad_options_view"
                    android:orientation="horizontal">

                    <include layout="@layout/adglide_view_native_ad_label" />

                    <TextView
                        android:id="@+id/advertiser_textView"
                        style="@style/AdGlide.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/adglide_video_padding_small"
                        android:layout_marginTop="@dimen/adglide_spacing_tiny"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/adglide_txt_advertiser" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ad_options_view"
                    android:layout_width="@dimen/adglide_ad_options_size"
                    android:layout_height="@dimen/adglide_ad_options_size"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/start_app_native_button"
                android:layout_below="@+id/view_sponsored"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/adglide_item_post_padding_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/adglide_native_icon_size"
                        android:layout_height="@dimen/adglide_native_icon_size"
                        card_view:cardCornerRadius="@dimen/adglide_corner_radius"
                        card_view:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/start_app_native_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/adglide_img_content_description"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/adglide_item_post_padding_medium"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/start_app_native_title"
                            style="@style/AdGlide.Headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="2"
                            android:text="" />

                        <RatingBar
                            android:id="@+id/rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adglide_spacing_tiny"
                            android:numStars="5"
                            android:rating="4.5"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/adglide_item_post_padding_small">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="H,16:9"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            card_view:cardCornerRadius="@dimen/adglide_corner_radius"
                            card_view:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/start_app_native_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/adglide_img_content_description"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/adglide_item_post_padding_medium"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/start_app_native_description"
                        style="@style/AdGlide.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/start_app_native_button"
                style="@style/AdGlide.ButtonText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/adglide_video_cta_button_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/adglide_ad_button" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
