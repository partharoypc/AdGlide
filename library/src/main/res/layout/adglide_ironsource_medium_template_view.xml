<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/adglide_bg_native_ad"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="@dimen/adglide_spacing_medium">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/adglide_spacing_medium"
                android:orientation="horizontal">

                <include layout="@layout/adglide_view_native_ad_label" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/adglide_item_post_padding_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/adglide_icon_size_medium"
                android:layout_height="@dimen/adglide_icon_size_medium"
                card_view:cardCornerRadius="@dimen/adglide_corner_radius"
                card_view:cardElevation="0dp">

                <ImageView
                    android:id="@+id/native_ad_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/adglide_img_content_description"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/adglide_item_post_padding_medium"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/native_ad_title"
                    style="@style/AdGlide.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/adglide_spacing_tiny"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="" />

                <TextView
                    android:id="@+id/native_ad_body"
                    style="@style/AdGlide.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/native_ad_call_to_action"
            style="@style/AdGlide.ButtonText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adglide_cta_button_height"
            android:layout_marginTop="@dimen/adglide_item_post_padding_small"
            android:background="@drawable/adglide_ad_button" />

    </LinearLayout>

</LinearLayout>
