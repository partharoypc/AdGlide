<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_lovin_unit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/app_lovin_native_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/adglide_video_padding_medium"
            android:layout_marginTop="@dimen/adglide_video_padding_medium"
            android:layout_marginEnd="@dimen/adglide_video_padding_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/ad_options_view"
                android:orientation="horizontal">

                <include layout="@layout/adglide_view_native_ad_label" />

                <TextView
                    android:id="@+id/advertiser_textView"
                    style="@style/AdGlide.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/adglide_video_padding_small"
                    android:layout_marginTop="@dimen/adglide_spacing_tiny"
                    android:ellipsize="end"
                    android:fontFamily="@font/adglide_custom_font"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ad_options_view"
                android:layout_width="@dimen/adglide_ad_options_size"
                android:layout_height="@dimen/adglide_ad_options_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/adglide_video_padding_medium"
            android:layout_marginTop="@dimen/adglide_item_post_padding_small"
            android:layout_marginEnd="@dimen/adglide_video_padding_medium"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/adglide_video_thumbnail_width"
                android:layout_height="@dimen/adglide_video_thumbnail_height"
                card_view:cardCornerRadius="@dimen/adglide_corner_radius"
                card_view:cardElevation="0dp">

                <ImageView
                    android:id="@+id/icon_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/adglide_img_content_description"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/adglide_item_post_padding_medium"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_text_view"
                    style="@style/AdGlide.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/adglide_custom_font"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="" />

                <TextView
                    android:id="@+id/body_text_view"
                    style="@style/AdGlide.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/adglide_custom_font"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="" />

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/adglide_spacing_tiny"
                    android:numStars="5"
                    android:rating="4.5"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/adglide_item_post_padding_small">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:id="@+id/media_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cta_button"
            style="@style/AdGlide.ButtonText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adglide_video_cta_button_height"
            android:layout_marginStart="@dimen/adglide_video_padding_medium"
            android:layout_marginTop="@dimen/adglide_item_post_padding_small"
            android:layout_marginEnd="@dimen/adglide_video_padding_medium"
            android:layout_marginBottom="@dimen/adglide_item_post_padding_small"
            android:fontFamily="@font/adglide_custom_font"
            android:background="@drawable/adglide_ad_button" />

    </LinearLayout>

</LinearLayout>

